      <div class="container-fluid">
        <div id="manage-address" class="profile-edit">
            <h3 class="text-center mb-3">Manage Address</h3>
            <!-- Add Address button -->
            <% if (addrress.length < 3) { %>
                <button id="addAddressBtn" class="btn btn-primary mb-3" data-toggle="modal" data-target="#addAddressModal">Add Address</button>
            <% } %>
            <div class="row">
                <% addrress.slice().reverse().forEach(function(address) { %>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="address-card" style="background-color: rgb(212, 250, 237); padding: 15px; border-radius: 10px; color: black;">
                        <button type="button" class="btn btn-sm delete-address " style="margin-left: 60%;position: absolute; top: 5px;" onclick="addressdelete('<%= address._id %>')">
                            <i class="bi bi-trash3" style="font-size: 20px;"></i>
                        </button>
                        <!-- Edit Address button -->
                        <button type="button" class="btn btn-sm edit-address" style="margin-left: 70%;position: absolute; top: 5px;" data-toggle="modal" data-target="#editAddressModal<%= address._id %>">
                            <i class="bi bi-pencil-square" style="font-size: 20px;"></i>
                        </button>
                        <h5 class="mt-3"><%= address.name %></h5>
                        <p>
                            <%= address.address %>,
                            <%= address.city %>,
                            <%= address.district %>,
                            <%= address.state %>,
                            <%= address.pincode %>
                        </p>
                        <h6><i class="bi bi-telephone" style="margin-right: 10px;"></i><%= address.phone %></h6>
                        <h6><i class="bi bi-envelope " style="margin-right: 10px;"></i><%= address.email %></h6>
                    </div>
                </div>
