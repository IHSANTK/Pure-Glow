    <style>
        .order-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
        }

        .order-details {
            margin-left: 20px;
        }

        .product-info {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .product-image {
            margin-right: 20px;
        }

        .address-info {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            margin-top: 20px;
        }

        .cancel-form {
            margin-top: 20px;
        }
    </style>
</head>

<body style="background-color: aliceblue;">

   
<h2 style="margin-left: 10%; margin-top: 2%;">My Orders</h2>
    <div class="container" style="margin-top: 30px;">
        <div class="order-container">
            <% products.forEach(product => { %>
                <div class="order" style="background-color: rgb(224, 236, 177); padding: 10px; border-radius: 10px;margin-top: 15px;">
                    <div class="product-info">
                        <div class="product-image">
                            <a href="/productveiw/<%= product.productId %>">
                            <img src="<%= product.image[0] %>" alt="Product Image" style="max-width: 100px;">
                            </a>
                        </div>
                        <div class="order-details">
                            <h2><%= product.name %></h2>
                            <p>Quantity: <%= product.qty %></p>
                            <p>Price: <%= product.price %></p>
                           
                            <% if (product.cancelReason) { %>
                                <p>Cancel Reason: <%= product.cancelReason %></p>
                            <% } %>
                                 <!-- Format orderDate -->
            <p>Order Date: <%= new Date(userOrders[0].orderDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
    
            <!-- Calculate expected delivery date -->
            <% 
                        const orderDate = new Date(userOrders[0].orderDate);
                        const expectedDeliveryDate = new Date(orderDate);
                        expectedDeliveryDate.setDate(orderDate.getDate() + 4); // Adding 4 days
                    %>
            <p>Expected Delivery Date: <%= expectedDeliveryDate.toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>

            <p>Payment Method: <%= userOrders[0].paymentMethod %></p>
            <% if (product.orderStatus=== 'cancel') { %>
                 <p style="color: red;">Order Status: <%= product.orderStatus %></p>
                 <% }else{ %>
                    <p >Order Status: <%= product.orderStatus %></p>
                    <% }%>
                        </div>
                    </div>
                    <div class="address-info">
                        <h5><i class="fas fa-map-marker-alt"></i> <%= userOrders[0].shippingAddress.name %></h5>
                        <p><%= userOrders[0].shippingAddress.address %>, 
                            <%= userOrders[0].shippingAddress.city %>,
                            <%= userOrders[0].shippingAddress.district %> <br>
                            <%= userOrders[0].shippingAddress.state %>
                            <%= userOrders[0].shippingAddress.pincode %></p>
                        <h6><i class="fas fa-phone-alt"></i> <%= userOrders[0].shippingAddress.phone %></h6>
                        <!-- <h6><i class="fas fa-envelope"></i> <%= userOrders[0].shippingAddress.email %></h6> -->
                    </div>
                    <form class="cancel-form" action="/cancellreson/<%=product.productId %>" method="post" onsubmit="return submitCancellationReason(this)">
                        <div class="form-group">
                            <label for="cancelReasonSelect">Cancel Product</label>
                            <select class="form-control" id="cancelReasonSelect" name="cancelReason">
                                <option selected disabled>Select a reason</option>
                                <option value="size Not Match">size Not Match</option>
                                <option value="Change My Mind">Change My Mind</option>
                                <option value="Product Damages">Product Damages</option>
                                <!-- Add more reasons as needed -->
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger">Cancel</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Add Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function submitCancellationReason(form) {
        var reasonSelect = form.querySelector('#cancelReasonSelect');
        var selectedReason = reasonSelect.value;
        
        if (selectedReason === "") {
            alert("Please select a reason.");
            return false; // Prevent form submission if no reason selected
        }
        
        return true; // Allow form submission if reason selected
    }
    </script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <!-- Your other scripts -->
</body>

